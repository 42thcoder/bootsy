<%= form_for [bootsy, resource_or_nil(gallery), image], remote: true, html: { multipart: true, class: 'bootsy form-inline' } do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="bootsy-spinner hidden">
    <%= image_tag "bootsy/ajax-loader.gif" %>
  </div>

  <%= f.file_field :image_file, title: t('bootsy.action.upload') %>
<% end %>
