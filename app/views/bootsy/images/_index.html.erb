<%= link_to 'Image Gallery', '#bootsy_images', :'data-toggle' => 'modal', :class => 'btn' %>

<div class="modal hide fade" id="bootsy_images">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Images</h3>
  </div>
  <div class="modal-body">
    <ul>
    <% resource.bootsy_images.each do |image| %>
      <li>
        <%= image.caption %>
        <%= link_to 'Destroy', image, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
    </ul>

    <br />

    <h1>New image</h1>

    <%= render 'bootsy/images/form', {:image => resource.bootsy_images.new } %>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>